{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerGroupName": {
            "type": "string",
            "metadata": {
                "description": "container instance name"
            },
            "defaultValue": "training-aci"
        },
        "containerName": {
            "type": "string",
            "metadata": {
                "description": "container instance name"
            },
            "defaultValue": "nginx"
        },
        "containerImage": {
            "type": "string",
            "metadata": {
                "description": "container instance image"
            },
            "defaultValue": "php:apache"
        },
        "dnsNameLabel": {
            "type": "string",
            "metadata": {
                "description": "dns lable"
            },
            "defaultValue": "oleksii-training-aci"
        },
        "restartPolicy": {
            "type": "string",
            "allowedValues": [
                "OnFailure",
                "Always",
                "Never"
            ],
            "defaultValue": "OnFailure"
        },
        "sku": {
            "type": "string",
            "allowedValues": [
                "Standard",
                "Confidential"
            ],
            "defaultValue": "Standard"
        },
        "osType": {
            "type": "string",
            "allowedValues": [
                "Linux",
                "Windows"
            ],
            "defaultValue": "Linux"
        },
        "numberCpuCores": {
            "type": "string",
            "defaultValue": "1"
        },
        "memory": {
            "type": "string",
            "defaultValue": "1.5"
        },
        "autoGeneratedDomainNameLabelScope": {
            "type": "string",
            "metadata": {
                "description": "dns scope"
            },
            "allowedValues": [
                "TenantReuse",
                "SubscriptionReuse",
                "ResourceGroupReuse"
            ],
            "defaultValue": "TenantReuse"
        },
        "containerRegistryName": {
            "type": "string",
            "metadata": {
                "description": "acr name"
            },
            "defaultValue": "oleksiitrainingacr"
        },
        "tags": {
            "type": "object",
            "metadata": {
                "description": "tags for all resources"
            },
            "defaultValue": {
                "training": "true"
            }
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "[parameters('containerGroupName')]",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2021-03-01",
            "location": "[resourceGroup().location]",
            "tags": "[parameters('tags')]",
            "properties": {
                "containers": [
                    {
                        "name": "[parameters('containerName')]",
                        "properties": {
                            "image": "[parameters('containerImage')]",
                            "ports": [
                                {
                                    "port": 80
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "cpu": "[int(parameters('numberCpuCores'))]",
                                    "memoryInGB": "[float(parameters('memory'))]"
                                }
                            }
                        }
                    }
                ],
                "imageRegistryCredentials": [
                    {
                        "password": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', parameters('containerRegistryName')), '2022-12-01').passwords[0].value]",
                        "username": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', parameters('containerRegistryName')), '2022-12-01').username]",
                        "server": "[reference(resourceId('Microsoft.ContainerRegistry/registries', parameters('containerRegistryName')), '2022-12-01').loginServer]"
                    }
                ],
                "restartPolicy": "[parameters('restartPolicy')]",
                "osType": "[parameters('osType')]",
                "sku": "[parameters('sku')]",
                "ipAddress": {
                    "type": "Public",
                    "ports": [
                        {
                            "protocol": "TCP",
                            "port": 80
                        }
                    ],
                    "dnsNameLabel": "[parameters('dnsNameLabel')]",
                    "autoGeneratedDomainNameLabelScope": "[parameters('autoGeneratedDomainNameLabelScope')]"
                }
            }
        }
    ],
    "outputs": {
        "aciUrl": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups', parameters('containerGroupName')), '2021-03-01').ipAddress.fqdn]"
        }
    }
}
